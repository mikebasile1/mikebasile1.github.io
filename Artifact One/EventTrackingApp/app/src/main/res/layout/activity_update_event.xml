<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the Update Event screen -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseConstraintLayout"
    tools:context=".UpdateEvent">

    <!-- Top app bar with back navigation -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarUpdateEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:navigationContentDescription="@string/backButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Page title -->
    <TextView
        android:id="@+id/updateEventScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/updateEventScreenTitle"
        style="@style/ScreenTitleText"
        app:layout_constraintTop_toBottomOf="@id/topAppBarUpdateEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Event title input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titleLayoutUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/eventTitle"
        style="@style/StandardTextInputLayout"
        app:layout_constraintTop_toBottomOf="@id/updateEventScreenTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Date and time pickers -->
    <LinearLayout
        android:id="@+id/date_and_time_updates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleLayoutUpdate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Date picker -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/date_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/eventDate"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:contentDescription="@string/eventDate"
            tools:ignore="VisualLintButtonSize"/>

        <!-- Start Time picker -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_time_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/eventStartTime"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:contentDescription="@string/eventStartTime"
            tools:ignore="VisualLintButtonSize"/>

        <!-- End Time picker -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/end_time_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:text="@string/eventEndTime"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:contentDescription="@string/eventEndTime"
            tools:ignore="VisualLintButtonSize"/>
    </LinearLayout>

    <!-- Event description input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descriptionLayoutUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/eventDescription"
        style="@style/StandardTextInputLayout"
        app:layout_constraintTop_toBottomOf="@id/date_and_time_updates"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:minHeight="96dp"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            tools:ignore="VisualLintTextFieldSize,TextContrastCheck"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Update button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_button"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:enabled="false"
        android:text="@string/updateEvent"
        style="@style/PrimaryButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/descriptionLayoutUpdate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        tools:ignore="VisualLintButtonSize"/>

    <!-- Delete button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_button"
        android:layout_width="0dp"
        android:layout_marginTop="12dp"
        android:text="@string/deleteEvent"
        style="@style/SecondaryButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/update_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        tools:ignore="VisualLintButtonSize"/>

</androidx.constraintlayout.widget.ConstraintLayout>